	<select id="existingCompany" resultType="String">
		select com_email from com_scrap where user_email=#{user_email} 
			and com_email = (select com_email from notice_tb 
							where notice_num=${notice_num})
	</select>
	
<!--2. 값이 없을 경우, DB에 정보 추가 -->
	<insert id="comScrap">
